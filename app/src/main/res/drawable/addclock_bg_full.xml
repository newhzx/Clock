<?xml version="1.0" encoding="utf-8"?>
<!--上下划灰线 填充灰色-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/colorSimpleDark" />
            <!--填充颜色-->
            <solid android:color="@color/colorDark" />
        </shape>
    </item>
</layer-list>